{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server for the application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nodemon --exec babel-node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run clean && npm run build:js && npm run copy-files",
    "build:js": "babel src --out-dir dist --extensions \".js\" --config-file ./babel.config.json",
    "copy-files": "npx copyfiles -u 1 \"src/**/*.{json,env}\" dist",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); const dir = 'dist'; if (fs.existsSync(dir)) { fs.rmSync(dir, { recursive: true, force: true }); }\" && echo 'Cleaned dist directory'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "npm run build",
    "prestart": "npm run build",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 --exit --require test/test-setup.js --recursive test/**/*.test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "babel": "^5.8.38",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.5",
    "qrcode": "^1.5.4",
    "rimraf": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "chai": "^5.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "mocha": "^11.7.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
